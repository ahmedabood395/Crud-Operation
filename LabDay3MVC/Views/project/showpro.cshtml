@model List<LabDay3MVC.Models.Project>
@{
    ViewBag.Title = "Project Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.ActionLink("Create Project", "add", "project", null, new { @class = "btn btn-info m-4" })
<br />
<table class="alert-info table-active m-4">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Loction</th>
        <th>Discription</th>
        <th>Dept_Name</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.name</td>
            <td>@item.loc</td>
            <td>@item.discription</td>
            <td>@item.department.name</td>
            <td>
                @Html.ActionLink("Edit", "edit", "project",new { id=item.id},null)|
                @Html.ActionLink("Delete", "delete", "project",new { id=item.id},new { onclick = "return confirm('Are you sure delete " + item.name + "')" })
            </td>
        </tr>
    }
</table>
