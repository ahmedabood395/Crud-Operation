
@{
    ViewBag.Title = "Create Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <table>
        <tr>
            <td>Name</td>
            <td><input type="text" name="p.name" /></td>
            <td></td>
        </tr>
        <tr>
            <td>Loction</td>
            <td><input type="text" name="p.loc" /></td>
            <td></td>
        </tr>
        <tr>
            <td>Discription</td>
            <td><input type="text" name="p.discription" /></td>
            <td></td>
        </tr>
        <tr>
            <td>Department</td>
            <td>
                <select name="p.dept_id">
                    @foreach (var item in (List<LabDay3MVC.Models.Department>)ViewBag.dept)
                    {
                        <option value="@item.id">@item.name</option>
                    }

                </select>
            </td>
            <td></td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Save" />
            </td>
        </tr>
    </table>
</form>

