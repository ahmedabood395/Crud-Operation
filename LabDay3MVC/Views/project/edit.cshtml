@model LabDay3MVC.Models.Project
@{
    ViewBag.Title = "Edit Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <table>
        <input type="hidden" name="p.id" value="@Model.id" />

        <tr>
            <td>Name</td>
            <td><input type="text" name="p.name" value="@Model.name" /></td>
            <td></td>
        </tr>
        <tr>
            <td>Location</td>
            <td><input type="text" name="p.loc" value="@Model.loc" /></td>
            <td></td>
        </tr>
        <tr>
            <td>Discription</td>
            <td><input type="text" name="p.discription" value="@Model.discription" /></td>
            <td></td>
        </tr>
        <tr>
            <td>Department</td>
            <td>
                <select name="p.dept_id">
                    @foreach (var item in (List<LabDay3MVC.Models.Department>)ViewBag.dept)
                    {
                        if (item.id == Model.dept_id)
                        {
                            <option value="@item.id" selected>@item.name</option>
                        }
                        else
                        {
                            <option value="@item.id">@item.name</option>

                        }
                    }

                </select>
            </td>
            <td></td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Save" />
            </td>
        </tr>
    </table>
</form>

