@model LabDay3MVC.Models.Employee
@{
    ViewBag.Title = "Edite Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <table>
        <tr>
            <input type="hidden" name="e.id" value="@Model.id" />
            <td>Name</td>
            <td><input type="text" name="e.name" value="@Model.name" /></td>
            <td></td>
        </tr>
        <tr>
            <td>HireDate</td>
            <td><input type="text" name="e.hiredate" value="@Model.hiredate" /></td>
            <td></td>
        </tr>
        <tr>
            <td>Address</td>
            <td><input type="text" name="e.address" value="@Model.address"/></td>
            <td></td>
        </tr>
        <tr>
            <td>Salary</td>
            <td><input type="text" name="e.salary" value="@Model.salary" /></td>
            <td></td>
        </tr>
        <tr>
            <td>Department</td>
            <td>
                <select name="e.dept_id">
                    @foreach (var item in (List<LabDay3MVC.Models.Department>)ViewBag.dept)
                    {
                        if (item.id == Model.dept_id)
                        {
                            <option value="@item.id" selected>@item.name</option>
                        }
                        else
                        {
                            <option value="@item.id">@item.name</option>

                        }
                    }

                </select>
            </td>
            <td></td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Save" />
            </td>
        </tr>
    </table>
</form>

