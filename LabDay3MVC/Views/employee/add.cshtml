
@{
    ViewBag.Title = "Create Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <table>
        <tr>
            <td>Name</td>
            <td><input type="text" name="e.name" /></td>
            <td></td>
        </tr>
        <tr>
            <td>HireDate</td>
            <td><input type="text" name="e.hiredate" /></td>
            <td></td>
        </tr>
        <tr>
            <td>Address</td>
            <td><input type="text" name="e.address" /></td>
            <td></td>
        </tr>
        <tr>
            <td>Salary</td>
            <td><input type="text" name="e.salary" /></td>
            <td></td>
        </tr>
        <tr>
            <td>Department</td>
            <td><select name="e.dept_id">
                @foreach (var item in (List<LabDay3MVC.Models.Department>)ViewBag.dept)
                {
                    <option value="@item.id">@item.name</option>
                }

</select></td>
            <td></td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Save" />
            </td>
        </tr>
    </table>
</form>

